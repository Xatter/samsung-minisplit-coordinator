<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title || 'SmartThings Matter Bridge' %></title>

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">

    <!-- Materialize CSS -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css" rel="stylesheet">

    <style>
        body {
            font-family: 'Roboto', sans-serif;
            background: #f5f5f5;
            margin: 0;
            padding: 0;
        }

        .brand-logo {
            font-size: 1.5rem;
            font-weight: 500;
        }

        .main-container {
            padding: 20px;
        }

        .content-card {
            padding: 20px;
        }
    </style>
    <%- include('partials/page-styles') %>
</head>
<body>
    <header>
        <nav class="white z-depth-1">
            <div class="nav-wrapper container">
                <a href="/admin/devices" class="brand-logo blue-text text-darken-2">SmartThings Bridge</a>
                <ul id="nav-mobile" class="right hide-on-med-and-down">
                    <li class="<%= (typeof currentPage !== 'undefined' && currentPage === 'devices') ? 'active' : '' %>">
                        <a href="/admin/devices" class="blue-text text-darken-2">Devices</a>
                    </li>
                    <% if (typeof showCoordinator !== 'undefined' && showCoordinator) { %>
                    <li class="<%= (typeof currentPage !== 'undefined' && currentPage === 'coordinator') ? 'active' : '' %>">
                        <a href="/admin/coordinator" class="blue-text text-darken-2">Heat Pump</a>
                    </li>
                    <% } %>
                    <li class="<%= (typeof currentPage !== 'undefined' && currentPage === 'matter') ? 'active' : '' %>">
                        <a href="/matter/setup" class="blue-text text-darken-2">Matter Setup</a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>

    <main class="main-container container">
        <div class="card content-card">
            <div class="card-content">
                <%- body %>
            </div>
        </div>
    </main>

    <!-- Materialize JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
    <%- include('partials/page-scripts') %>
    <% if (typeof script !== 'undefined') { %>
            <%- script %>
        <% } %>
</body>
</html>
<!-- QR Code Generation Library for Matter Setup Page -->
<script src="https://cdn.jsdelivr.net/npm/qrcode/build/qrcode.min.js"></script>
<script>
// Generate QR code if canvas element exists
document.addEventListener('DOMContentLoaded', function() {
    const canvas = document.getElementById('qrcode-canvas');
    if (canvas && '<%= commissioning.qrCode %>') {
        QRCode.toCanvas(canvas, '<%= commissioning.qrCode %>', {
            width: 200,
            margin: 2,
            color: {
                dark: '#000000',
                light: '#FFFFFF'
            }
        }, function (error) {
            if (error) {
                console.error('QR Code generation failed:', error);
                canvas.style.display = 'none';
            }
        });
    }
});

// Matter setup page functions
function copyToClipboard(text) {
    navigator.clipboard.writeText(text).then(function() {
        alert('Setup code copied to clipboard!');
    }, function(err) {
        console.error('Could not copy text: ', err);
        // Fallback for older browsers
        const textArea = document.createElement('textarea');
        textArea.value = text;
        document.body.appendChild(textArea);
        textArea.select();
        document.execCommand('copy');
        document.body.removeChild(textArea);
        alert('Setup code copied to clipboard!');
    });
}

async function resetMatterDevice() {
    const resetBtn = document.querySelector('.reset-btn');
    const statusDiv = document.getElementById('resetStatus');
    
    // Confirm action
    if (!confirm('Are you sure you want to reset the Matter device? This will require re-commissioning with HomeKit.')) {
        return;
    }
    
    // Disable button and show loading
    resetBtn.disabled = true;
    resetBtn.textContent = 'Resetting...';
    statusDiv.style.display = 'block';
    statusDiv.innerHTML = '<div style="color: #667eea;">üîÑ Resetting Matter device...</div>';
    
    try {
        const response = await fetch('/matter/reset', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            }
        });
        
        const result = await response.json();
        
        if (result.success) {
            statusDiv.innerHTML = '<div style="color: #48bb78;">‚úÖ ' + result.message + '</div>';
            setTimeout(() => {
                window.location.reload();
            }, 2000);
        } else {
            statusDiv.innerHTML = '<div style="color: #e53e3e;">‚ùå ' + result.message + '</div>';
            resetBtn.disabled = false;
            resetBtn.textContent = 'Reset Matter Device';
        }
    } catch (error) {
        console.error('Reset error:', error);
        statusDiv.innerHTML = '<div style="color: #e53e3e;">‚ùå Failed to reset device. Please try again.</div>';
        resetBtn.disabled = false;
        resetBtn.textContent = 'Reset Matter Device';
    }
}
</script>
<% } %>
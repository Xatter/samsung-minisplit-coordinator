[Unit]
Description=Samsung Mini-Split Coordinator Matter Server
Requires=docker.service
After=docker.service network-online.target
Wants=network-online.target

[Service]
Type=oneshot
RemainAfterExit=yes
WorkingDirectory=/home/xatter/samsung-minisplit-coordinator
ExecStart=/usr/bin/docker compose up -d
ExecStop=/usr/bin/docker compose down
User=xatter
Group=xatter
Restart=on-failure
RestartSec=10

[Install]
WantedBy=multi-user.target